<div class = "container">
 <h1>Card </h1>
 <table>
   <tr>
     <th>picture </th>
     <th>name </th> 
     <th>desription</th>
     <th>price</th>
   </tr>
    <% @products.each do |product| %>
      <tr>
       <td><%= image_tag product.picture, size: "120x120" %></td> 
       <td><%= product.name%></td>        
       <td><%=product.description%></td>
       <td><%=product.price%></td>    
       <td><%= link_to "show", product_path(product) %></td>
       <td><%= link_to "edit", edit_product_path(product) %></td>
       <td><%=link_to "Destroy", product_path(product), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                   } %> </td>
      </tr>
   <%end%>
  </table>
</div>
 