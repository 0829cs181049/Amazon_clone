<h1><%= @product.name %></h1>

<p><%= @product.description %></p><br>
<%= image_tag(url_for(@product.picture))%>
<p><%= @product.price %></p>
<ul>
  <li><%= link_to "Edit", edit_product_path(@product) %></li>
  <li><%= link_to "Destroy", product_path(@product), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
</ul>

<h2> review </h2> 
<%= render @product.reviews %>


<h3>Add a Review:</h3>
<%= render :partial => "reviews/form", :locals => { review: @review } %>
